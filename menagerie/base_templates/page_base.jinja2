                {#                    </li>#}
                {#                    <li class="nav-item me-2">#}
                {#                        {{ external_link("<i class=\"bi-discord\"></i><small class=\"d-xl-none ms-2\">Discord</small>", "https://discord.gg/9vE5aHxcF9", "nav-link p-2 fs-5") }}#}
                {#                    </li>#}
                {#                </ul>#}
            </div>
        </div>
    </nav>
</header>
<div class="container-lg flex-grow-1">
    <main class="main">
        <div>
            {{ content }}
        </div>
    </main>
</div>
